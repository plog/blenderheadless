# Blender Render Service Environment Variables
# Copy this file to .env and set your actual values

# Authentication token for the application (use a strong random token)
AUTH_TOKEN=your-secure-token-here

# Secret key for Flask sessions (generate a new one for production)
SECRET_KEY=your-production-secret-key-here

# Timezone
TZ=Europe/Paris

# NVIDIA GPU settings
NVIDIA_VISIBLE_DEVICES=1,2,3
NVIDIA_DRIVER_CAPABILITIES=compute,utility